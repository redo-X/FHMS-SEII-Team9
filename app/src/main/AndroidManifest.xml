<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="warehouse.fh_muenster.de.warehouse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".WarehouseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CommissioningOverview" />
        <activity android:name=".CommissionArtikel" />
        <activity android:name=".mockMenue" />
        <activity android:name=".Stock" />
        <activity android:name=".StockOut" />
        <activity android:name=".StockAmendment" />
        <activity android:name=".Scanner" />
        <activity android:name=".AdminActivity"></activity>
    </application>

</manifest>